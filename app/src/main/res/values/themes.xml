<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Devfest2023" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="android:background">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Mystyle" parent="android:TextAppearance">
        <item name="android:layout_margin">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/product_sans_medium</item>
        <item name="android:lineSpacingExtra">-4dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>